    "/api/v1/quotes/ground-transport": {
      "post": {
        "summary": "Get a carbon credit quote for ground transport emissions",
        "tags": [
          "Quotes"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
